<div class="max-w-5xl w-full mx-auto">
  <%= form_with model: current_user, url: settings_path, method: :post do |f| %>
    <div class="max-w-2xl flex flex-col gap-4 mx-auto">  
      <div class="grid grid-cols-2 gap-4">
        <div class="flex flex-col">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class:"rounded-lg" %>
        </div>
        <div class="flex flex-col">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class:"rounded-lg" %>
        </div>
      </div>
      <div class="grid grid-cols-3 gap-4">
        <div class="flex flex-col col-span-2">
          <%= f.label :address_1 %>
          <%= f.text_field :address_1, class:"rounded-lg"%>
        </div>

        <div class="flex flex-col">
          <%= f.label :address_2 %>
          <%= f.text_field :address_2, class:"rounded-lg" %>
        </div>
      </div>

      <div class="grid grid-cols-3 gap-4">

        <div class="flex flex-col">
          <%= f.label :city %>
          <%= f.text_field :city, class:"rounded-lg" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :state %>
          <%= f.text_field :state, class:"rounded-lg" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :zipcode %>
          <%= f.text_field :zipcode, class:"rounded-lg" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :country %>
          <%= f.text_field :country, class:"rounded-lg" %>
        </div>
      </div>
      
      <div class="flex flex-col">
        <%= f.label :about_me %>
        <%= f.rich_text_area :about_me %>
      </div>
      <div class="flex gap-4">
        <%= image_tag(current_user.profile_picture, class: "w-16 h-16 object-cover rounded-full") if current_user.profile_picture.attached?%>
        <div class="flex flex-col">
          <%= f.label :profile_picture %>
          <%= f.file_field :profile_picture %>
        </div>
      </div>

      <%= f.submit "Update Profile Information", class: "p-2 rounded-lg bg-gradient-to-r from-pink-500 to-red-600 text-red-100 cursor-pointer" %>

    </div>
  <% end %>

  <div class="mt-20 border-t-2 border-gray-100">
    <h3 class="text-2xl"> Additional Settings </h3>
    <br>
    <%= link_to "Change Email/Password", edit_user_registration_path, class: "rounded-lg p-2 border-2 border-gray-100 bg-gray-100" %>
  </div>
</div>